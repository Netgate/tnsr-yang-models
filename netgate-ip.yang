module netgate-ip {

    yang-version 1.1;

    namespace "urn:netgate:xml:yang:netgate-ip";
    prefix "ngip";

    organization "Netgate";

    contact "Web: <http://www.netgate.com>";

    description
	"This YANG module provides global ip configuration such as ip-reassembly.

	 Copyright 2019-2020 Rubicon Communications, LLC.
	 ";

    revision 2020-06-15 {
	description
	    "TNSR Release 20.06.";
    }

    revision 2020-02-15 {
	description
	    "TNSR Release 20.02.";
    }

    revision 2019-12-15 {
	description
	    "TNSR Release 19.12.";
    }

    revision 2019-08-30 {
	description
	    "TNSR Release 19.08.";
    }

    container ip-config {
	container reassembly {
	    container full {
		uses reassembly-grouping;
	    }
	    container virtual {
		uses reassembly-grouping;
	    }
	}
    }

    container ip-state {
        config false;
	container reassembly {
	    container full {
		uses reassembly-grouping;
	    }
	    container virtual {
		uses reassembly-grouping;
	    }
	}
    }

    grouping reassembly-grouping {
	    container ipv4 {
		description
		    "Ip4-reassembly settings.";
		leaf timeout-ms {
		    type uint32;
		    description
			"Reassembly timeout in milliseconds.";
		}
		leaf expire-walk-interval-ms {
		    type uint32;
		    description
			"Timeout trying to keep fragments.";
		}
		leaf max-reassemblies {
		    type uint32;
		    description
			"Maximum reassemblies count.";
		}
	    }

	    container ipv6 {
		description
		    "Ip6-reassembly settings.";
		leaf timeout-ms {
		    type uint32;
		    description
			"Reassembly timeout in milliseconds.";
		}
		leaf expire-walk-interval-ms {
		    type uint32;
		    description
			"Timeout trying to keep fragments.";
		}
		leaf max-reassemblies {
		    type uint32;
		    description
			"Maximum reassemblies count.";
		}
	    }
    }

}
