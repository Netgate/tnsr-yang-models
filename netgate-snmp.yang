
module netgate-snmp {

    namespace "https://netgate.com/ns/netgate-snmp";
    prefix "ngsnmp";

    import ietf-inet-types {
	prefix "inet";
    }
    import netgate-common {
	prefix "ngcom";
    }

    organization "Netgate";

    contact "Web: <http://www.netgate.com>";

    description
	"This YANG module provides a data model for the VPP LLDP Service.

	 Copyright 2019 Rubicon Communications, LLC.";

    revision 2019-08-30 {
	description
	    "TNSR Release 19.08.";
    }


    /*
     * type definitions
     */

    typedef snmp-view-type {
	type enumeration {
	    enum included;
	    enum excluded;
	}
    }

    typedef snmp-security-level {
	type enumeration {
	    enum noauth;
	    enum auth;
	    enum priv;
	}
    }

    typedef snmp-security-model {
	type enumeration {
	    enum any;
	    enum v1;
	    enum v2c;
	    enum usm;
	    enum tsmlksm;
	}
    }

    typedef snmp-context-match {
	type enumeration {
	    enum exact;
	    enum prefix;
	}
    }

    typedef snmp-source {
	    type union {
		    type enumeration { enum "default"; }
		    type inet:ipv6-prefix;
		    type inet:ipv4-prefix;
	    }
    }


    rpc snmp-control {
        input {
	    leaf operation {
	        mandatory true;
	        type ngcom:service-operation;
	        description
                    "One of the strings 'start', 'stop', 'restart',
                     or 'status'.";
	    }
        }
        output {
	    leaf stdout {
	        type string;
            }
        }
    }

    /*
     * configuration data
     */

    container snmp-config {
	leaf snmp-enable {
	    type boolean;
	    default "false";
	    description
		"enable the snmp daemons.";
	}

	container snmp-access-control {

	    list community-map {
		description "maps community name from SNMP request to security name";

		key "community-name";

		leaf community-name {
		    type string;
		    description "community name";
		}

		list map-entry {
		    key "context source";

		    leaf context {
			type string;
			description "SNMPv3 context";
		    }

		    leaf source {
			description "host name or IP address for source host";
			type snmp-source;
		    }

		    leaf security-name {
			type string;
			mandatory true;
			description "security name";
		    }
		}
	    }

	    list group {
		description "maps security name to group";
		key "group-name";
		leaf group-name {
		    type string;
		}
		list group-entry {
		    key "security-name security-model";
		    leaf security-name {
			type string;
		    }
		    leaf security-model {
			type snmp-security-model;
		    }
		}
	    }

	    list view {
		description "defines a subset of the OID tree";

		key "view-name";

		leaf view-name {
		    type string;
		}

		list view-entry {
		    key "type oid";

		    leaf type {
			description "exclude|include";
			type snmp-view-type;
		    }
		    leaf oid {
			description "SNMP OID";
			type string;
			mandatory true;
		    }
		    leaf mask {
			type string;
		    }
		}
	    }

	    list access {
		description
		    "maps from group to views";

		key "group-name";

		leaf group-name {
		    type string;
		}

		list access-entry {
		    key "context prefix security-model security-level";

		    leaf context {
			type string;
		    }
		    leaf prefix {
			type snmp-context-match;
		    }
		    leaf security-model {
			type snmp-security-model;
		    }
		    leaf security-level {
			type snmp-security-level;
		    }

		    leaf read {
			description "view to use for read ops";
			type string;
			mandatory true;
		    }
		    leaf write {
			description "view to use for write ops";
			type string;
			mandatory true;
		    }
		}
	    }
	}
    }
}
